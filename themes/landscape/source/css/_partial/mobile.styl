#mobile-nav
  opacity: 0
  display: none;

.mobile-nav-on
  #mobile-nav
    display: block
    opacity: 1
    left: 0

@media mq-mobile
  #mobile-nav
    opacity: 1
    position: fixed
    top: 0
    left: -100%
    width: mobile-nav-width
    height: 100%
    background: #607d8b
    border-right: 1px solid #fff
    z-index: 1

@media mq-mobile
  .mobile-nav-link
    display: block
    color: white
    text-decoration: none
    padding: 15px 20px
    font-weight: bold
    &:hover
      color: #e5f1f8

@media mq-mobile
  .article-entry
    figure
      margin: auto;
  
@media mq-mobile
  #footer
    margin: 0 6px;
