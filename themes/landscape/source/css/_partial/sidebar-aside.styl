#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  text-shadow: 0 1px #fff
  padding: 15px
  a
    color: color-link
    text-decoration: none
    &:hover
      color: darkred
      border-bottom: 1px dashed darkred
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
      font-size: 14px
  li
    margin-bottom: 8px